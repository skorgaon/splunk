<form>
  <label>TMDB_First_dashboard</label>
  <search id="base_search">
    <query>index="tmdb_index" | table id,release_date,title,genre_ids{},original_language,original_title,overview,popularity | mvexpand genre_ids{} | rename genre_ids{} as genre_id  | eval release_date_epoc = strptime(release_date,"%Y-%m-%d") | eval release_year = strftime(release_date_epoc,"%Y")| fillnull value="not Defined" id, release_year, genre_id, original_language</query>
  </search>
  <fieldset submitButton="true" autoRun="false">
